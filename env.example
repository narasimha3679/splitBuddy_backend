# SplitBuddy Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=splitbuddy_db
POSTGRES_USER=splitbuddy_user
POSTGRES_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_make_it_at_least_256_bits
JWT_EXPIRATION=5184000000

# Application Configuration
# For local development, use port 420
SERVER_PORT=420
SPRING_PROFILES_ACTIVE=dev

# Optional: Custom Database Host/Port (if not using Docker)
# SPRING_DATASOURCE_URL=jdbc:postgresql://your-db-host:5432/splitbuddy_db
# SPRING_DATASOURCE_USERNAME=your_db_user
# SPRING_DATASOURCE_PASSWORD=your_db_password
